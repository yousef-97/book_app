<!DOCTYPE html>
<html lang="en">

<head>

    <%- include ('../layout/head.ejs')  %>

</head>

<body>
    <header>
        <%- include ('../layout/header.ejs')  %>

    </header>
    <main>



        <div class="counter"><%= dataBaseBooks.length %> books here </div>

        <% dataBaseBooks.forEach(val=>{ %>
        <div class="index ">
            <img src="<%=val.image_url%>" alt="hi">
            <h3><%= val.title %></h3>
            <p><%= val.author %> </p>
            <a href="/books/<%= val.id %>">View details</a>
        </div>


        <%})%>

    </main>
    <footer></footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.js"></script>
    <script src="/js/app.js"></script>
</body>

</html>